@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h4>add a new machine</h4>
@using (Html.BeginForm())
{
  @Html.Label("Machine Name")
  @Html.TextBoxFor(model => model.MachineName, new { @class = "form-control", required = "required"})

  <br>
  @Html.Label("Install Date")
  @Html.TextBoxFor(model => model.InstallDate, new { @type = "date", @class = "form-control datepicker", required = "required" })

  <br>
  @Html.Label("Qualified Engineers")
  @Html.DropDownList("EngineerId")

  <br>
  <br>
  <input type="submit" value="Complete" class="btn btn-default" required="true" />
}